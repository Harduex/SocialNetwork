<!doctype html>

<head>
    <title>Login</title>
    <link rel="stylesheet" type="text/css" href="stylesheets/style.css">
</head>

<body>
    <script src="javascripts/nav.js"></script>
    <br><br><br>
    <% if(messages.error) {%>
    <%= messages.error %>
    <% } %>
    <div class="form-container">
        <h1 class="mobile">Login</h1>
        <form action="/login" method="post">

            <input class="mobile input-div" placeholder="Username" type="text" name="username" />
            <br>
            <input class="mobile input-div" placeholder="Password" type="password" name="password" />
            <br>
            <input class="mobile input-div" id="login" type="submit" value="Log In" />

        </form>
        <br>
        <form action="/register" method="post">
            <input class="mobile input-div" type="submit" value="Register" />
        </form>
    </div>
    <script>
        var target = document.getElementById('target');
        target.innerHTML = 'Log in';
    </script>
</body>