<!doctype html>

<head>
  <title>Add comment</title>
  <link rel="stylesheet" type="text/css" href="stylesheets/style.css">
</head>

<body>
  <script src="javascripts/nav.js"></script>
  <br><br><br>
  <div class="form-container">
    <h1 class="mobile">Add comment</h1>
    <form action="/comment" method="post">
      <textarea rows="4" cols="50" class="mobile input-div" placeholder="Comment" type="text" name="comment"></textarea>
      <br>
      <input type="hidden" name="user_name" id="user"/>
      <input class="mobile input-div" type="submit" value="Comment"/>
    </form>
  </div>

  <script>
    const queryString = window.location.search;
    console.log(queryString);
    const urlParams = new URLSearchParams(queryString);

    document.getElementById("user").value = urlParams.get("user_name");
    
</script>
</body>

</html>