<!doctype html>

<head>
    <title>Edit post</title>
    <link rel="stylesheet" type="text/css" href="stylesheets/style.css">
</head>

<body>
    <script src="javascripts/nav.js"></script>
    <br><br><br>
    <div class="form-container">
        <h1 class="mobile">Edit post</h1>

        <form action="/edit" enctype="multipart/form-data" method="post">
            <input type="hidden" name="title_before" id="titl_bfr" />
            <input class="mobile input-div" placeholder="Title" type="text" name="title" id="titl" />
            <br>
            <textarea rows="4" cols="50" class="mobile input-div" placeholder="Description" type="text" name="description" id="desc"></textarea>
            <br>
            <label class="fileContainer mobile input-div">
                <p>Select image..</p>
                <input class="mobile" type="file" accept="image/*" name="image">
              </label>
              <br>
            <input class="mobile input-div" type="submit" value="Update"/>
        </form>
        
    </div>

    <script>
        const queryString = window.location.search;
        console.log(queryString);
        const urlParams = new URLSearchParams(queryString);

        document.getElementById("titl").value = urlParams.get("post_title");
        document.getElementById("desc").value = urlParams.get("post_description");

        document.getElementById("titl_bfr").value = urlParams.get("post_title");
    </script>
</body>

</html>